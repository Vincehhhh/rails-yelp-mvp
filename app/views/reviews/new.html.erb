  <div class="container">
    <h1> Add a Review for the resto : <%= @restaurant.name %></h1>
    <!-- app/views/restaurants/_form.html.erb -->
    <%= simple_form_for [@restaurant, @review]  do |f| %>
      <%= f.input :content %>
      <%= f.input :rating,  input_html: { min: '0', max: '5' } %>
      <%= f.submit %>
    <% end %>
</div>
